<schema>
	<aclGroups>		
		<aclGroup name="users">
			<read>anonymous</read>
			<write>authenticated-users</write>
			<fields>
				<field>ideaTitle</field>
				<field>idea</field>
				<field>commentCount</field>
			</fields>
		</aclGroup>
		<defaultAcl>
			<read>nobody</read>
			<write>nobody</write>
		</defaultAcl>
	</aclGroups>
     <fields>
          <field name="ideaTitle" searchable="true"></field>
          <field name="idea" type="text" searchable="true"></field>
          <field name="commentCount" type="numeric"></field>
     </fields>
</schema>