<!-- 
  this query is used by the benefits collection in conjunction with the twoColumnsCatalog template
  to generate the "the benefits" page on the web site  
-->
<query>
    <executeACL>all</executeACL>
    <store>apstrata</store>
    <condition><![CDATA[ category<string>="benefits"]]></condition>
    <returnedFields>
        <field>*</field>
    </returnedFields>
    <sort>
        <field>
            <name>order</name>
            <type>numeric</type>
            <order>ASC</order>
        </field>
    </sort>
    <count>true</count>    
    <resultsPerPage>50</resultsPerPage>
    <forceCurrentSnapShot>true</forceCurrentSnapShot>
</query>