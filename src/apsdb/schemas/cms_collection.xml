<schema>
	<aclGroups>
		<aclGroup name="all">
			<read>anonymous</read>
			<write>creator;group:publishers</write>
			<fields>
				<field>title</field>
				<field>documentType</field>
				<field>firstQuery</field>
				<field>secondQuery</field>
				<field>pageSelection</field>
				<field>smallIcon</field>
				<field>regularIcon</field>
			</fields>
		</aclGroup>
		<schemaAcl>
			<read>nobody</read>
			<write>nobody</write>
			<delete>nobody</delete>
		</schemaAcl>
	</aclGroups>
	<fields>
		<field name="title" searchable="true" type="string" />		
		<field name="documentType" type="string" />
		<field name="firstQuery" type="string" />
		<field name="secondQuery" type="string" />
		<field name="smallIcon" type="file" />
		<field name="regularIcon" type="file" />
		<field name="pageSelection" type="string" />
	</fields>
</schema>